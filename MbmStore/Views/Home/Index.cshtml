@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
<style>
    .nav {
        background-color: #333;
        overflow: hidden;
    }
    .nav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
    }
    .nav a:hover {
        background-color: #ddd;
        color: black;
    }
    .nav a.active {
        background-color: #4CAF50;
        color: white;
    }
</style>

<h2>Index</h2>

<div class="nav">
    <a asp-controller="Movie" asp-action="Index">Movies</a>
    <a asp-controller="Customer" asp-action="Index">Customers</a>
    <a asp-controller="Catalogue" asp-action="Index">Catalogue</a>
    <a asp-controller="Invoice" asp-action="Index">Invoice</a>
</div>

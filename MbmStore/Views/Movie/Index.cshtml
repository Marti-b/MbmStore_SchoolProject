@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    ViewData["Title"] = "Movies";
}

<style>
    .nav {
        background-color: #333;
        overflow: hidden;
    }

        .nav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            .nav a:hover {
                background-color: #ddd;
                color: black;
            }

            .nav a.active {
                background-color: #4CAF50;
                color: white;
            }
</style>
<div class="nav">
    <a asp-controller="Home" asp-action="Index"> Back to Home page</a>
</div>


<h2>@ViewBag.JungleBook.Title</h2>
<p>Price: @String.Format("{0:0.00}", ViewBag.JungleBook.Price)</p>
<p><img src="/Images/@ViewBag.JungleBook.ImageFileName" alt="@ViewBag.JungleBook.Title" /></p>


@using MbmStore.Models
@model MbmStore.Models.Product
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "Index";
}
@*<style>
    .container div{
        display: inline-block;
    }
</style>*@


<div class="container">
    <div class="row">
        <div class="col-md">
            @foreach (Book b in @ViewBag.Booklist)
            {
                <b>Author:</b><p>@b.Author</p>
                <b>Title:</b><p>@b.Title</p>
                <b>Price:</b><p>@b.Price</p>
                <b>Publisher:</b><p>@b.Publisher</p>
                <b>ISBN:</b><p>@b.ISBN</p>
            }
        </div>

        <div class="col-md">
            @foreach (var c in @ViewBag.MusicCD)
            {
                <b>Album:</b><p>@c.Title</p>
                <b>Artist:</b><p>@c.Artist</p>
                <b>Price:</b><p>@c.Price</p>
                <b>Released:</b><p>@c.Released</p>
            }
        </div>

        <div class="col-sm">
            <h3> List of tracks:</h3>
            @{
                <ol>
                    @foreach (var t in @ViewBag.MusicCD)
                    {
                        @foreach (string track in t.Tracks)
                        {
                            <li>@track</li>
                        }
                    }
                </ol>
            }
        </div>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index"> Back to Home page</a>
</div>




